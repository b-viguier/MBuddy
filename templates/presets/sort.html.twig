{% extends "presets/base.html.twig" %}

{% block title %}Presets{% endblock %}

{% block presets_actions %}
    <button type="submit" form="presets_form" class="btn btn-success">
        <i class="bi bi-check"></i> Done
    </button>
    <form id="presets_form" method="POST" action="{{ url('presets_sort') }}">
        {{ parent() }}
    </form>
{% endblock %}


{% block preset %}
    <twig:Tile
            :title="preset.name"
            icon="bi-arrows-move"
            class="tile-preset-sort"
    >
        <input type="hidden" form="presets_form" name="presets[]" value="{{ preset.id }}" />
    </twig:Tile>
{% endblock %}

{% block script %}
<script lang="javascript">
    Sortable.create(document.getElementById('presets-row'));
</script>
{% endblock %}
