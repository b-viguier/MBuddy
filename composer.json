{
    "version": "0.1.0",
    "name": "bveing/mbuddy",
    "repositories": [
        {
            "type": "path",
            "url": "packages/symfony/web-profiler-bundle",
            "options": {
                "versions": {
                    "symfony/web-profiler-bundle": "v6.0.19"
                }
            }
        }
    ],
    "require": {
        "php": "8.0.*",
        "symfony/http-foundation": "^5.4",
        "symfony/console": "^5.4",
        "symfony/framework-bundle": "^5.4",
        "symfony/dotenv": "^5.4",
        "symfony/runtime": "^5.4",
        "symfony/yaml": "^5.4",
        "amphp/amp": "^2.6",
        "amphp/http-server": "^2.1",
        "symfony/psr-http-message-bridge": "^2.3",
        "react/http": "^1.11",
        "twig/twig": "^3.19",
        "symfony/profiler-pack": "^1.0",
        "symfony/ux-twig-component": "^2.9",
        "symfony/mime": "^6.0",
        "symfony/asset": "^6.0",
        "myclabs/php-enum": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Bveing\\MBuddy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bveing\\MBuddy\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "bviguier/php-rtmidi": "dev-main"
    },
    "scripts": {
        "install-tools": [
            "composer install --working-dir=tools",
            "ln -s tools/bin/phpunit vendor/phpunit"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php web/start.php"
        ],
        "cs-fix": "tools/bin/php-cs-fixer fix -v",
        "phpunit": "tools/bin/phpunit",
        "phpstan": "tools/bin/phpstan --memory-limit=1G -v analyse",
        "qa": [
            "@cs-fix",
            "@phpstan",
            "@phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
