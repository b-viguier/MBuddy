{% extends "presets/base.html.twig" %}

{% block title %}Preset Edit{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <twig:BreadcrumbItem href="{{ url('presets_edit', {'id': preset.id }) }}">
        Edit
    </twig:BreadcrumbItem>
{% endblock %}

{% block actions %}
    <a href="{{ url('presets_list') }}" class="btn btn-success">
        <i class="bi bi-check"></i> Done
    </a>
    <button type="submit" form="preset_form" class="btn btn-success">
        <i class="bi bi-floppy"></i> Save
    </button>
    <a class="btn btn-outline-success" href="{{ url('stage_show', {'id': preset.id}) }}" role="button">
        <i class="bi bi-play"></i> On Stage!
    </a>
{%  endblock %}

{% block content %}
        <form id="preset_form" method="POST" action="{{ url('presets_edit', {'id': preset.id}) }}" enctype="multipart/form-data">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text col-form-label col-form-label-lg">Name</span>
                </div>
                <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Name" value="{{ preset.name }}">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text col-form-label col-form-label-lg">Master</span>
                </div>
                <twig:MasterSelect
                    name="masterId"
                    :selected="preset.masterId"
                    class="form-control form-control-lg"
                    />
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Upload</span>
                        </div>

                        <input type="file" class="form-control"  name="scoreImg">
                    </div>
                </div>

                {% if scoreUrl %}
                    <div class="col-4">
                        <div class="row">
                            <img src="{{ scoreUrl }}" alt="Score" class="img-thumbnail rounded mt-2" style="max-width: 100px;">
                        </div>
                        <div class="row">
                            <div class="col">
                                <input class="form-check-input" type="checkbox" value="1" name="scoreImgDelete" id="scoreImgDelete">
                                <label class="form-check-label" for="scoreImgDelete">
                                    Delete Image
                                </label>
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Score</span>
                </div>
                <textarea rows="10" class="form-control" name="scoreTxt" placeholder="Score">
                    {{- preset.scoreTxt -}}
                </textarea>
            </div>
        </form>
{% endblock %}
